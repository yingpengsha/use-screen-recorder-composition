{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ]
}
